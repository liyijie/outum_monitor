<div class="container">
  <div class="page-header">
    <h1><%= @video.title %></h1>
  </div>

  <p class="lead"><%= raw @video.note %></p>

  <div id="player">
    <div class="watch">
      <a class="btn btn-primary">Click to Play Video â–¶</a>
    </div>
    <%= render 'shared/player' %>
  </div>

</div>

