<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "上海大唐移动Outum产品" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>

  <div class="navbar navbar-fixed-top navbar-inverse">
    
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to image_tag("dt_logo.png"),  "http://www.datangmobile.cn", target: "_blank", class: "brand", id: "logo"  %>
        <%= link_to "Outum V8", root_path, class: "brand" %>
        <ul class="nav">
          <% if user_signed_in? %>
            <li><%= link_to "客户端统计", clients_path %></li>
            <li><%= link_to "地理化显示", "/monitor/all" %></li>
            <li><%= link_to "在线监控", "/monitor/online" %></li>
          <% end %>
          <li><%= link_to "升级日志", "/home/version" %></li>
        </ul>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li><%= link_to("您好 #{current_user.email}", '#') %></li>
            <li>
            <%= link_to('用户注销', destroy_user_session_path, :method => :delete) %>        
            </li>
          <% else %>
            <li>
            <%= link_to('用户登录', new_user_session_path)  %>  
            </li>
          <% end %>

        </ul>
      </div>
    </div>
  </div>

  <%= my_bootstrap_flash %>
  <%= yield %>

  <hr>
  <footer class="wrap footer">
    <div class="container">
      <p class="copyright">© COPYRIGHT SHANGHAI DATANG MOBILE COMMUNICATIONS EQUIPMENT CO.,LTD. 2013</p>
    </div>
  </footer>

  <%= javascript_include_tag("application", @controller) if @controller %>
  <!-- <%= javascript_include_tag "application" %> -->

  <%= javascript_include_tag("application", "MarkerClusterer") %>

</body>
</html>
