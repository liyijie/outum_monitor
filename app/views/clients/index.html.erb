<div class="container">
  <ul class="breadcrumb">
    <li><a href="/"><span class="label label-success">主页</span></a><span class="divider">/</span></li>
    <li class="active"><span class="label label-default">客户端统计</span></li>
  </ul>
  <div id="counter"></div>
  <table id="clients" class="table table-striped table-bordered table-hover datatable">
   <thead>
    <tr>
      <th>序列号</th>
      <th>所在城市</th>
      <th>软件版本号</th>
      <th>最后上线时间</th>
      <th>在线天数</th>
      <th>今日里程（km）</th>
      <th>今日在线时长（分）</th>
      <th>总里程（km）</th>
      <th>总在线时长（分）</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
    <tr>
      <td><%= link_to client.label, client_path(client), :class => "badge badge-info" %></td>
      <!-- <td><%= link_to client.label, "##{client.label}", :class => "badge badge-info", :data => {:toggle=>"modal"}  %></td> -->
      <td><%= client.recent_city.to_s %></td>
      <td><%= client.soft_version.to_s %></td>
      <td><%= "#{client.last_time}(#{time_ago_in_words(client.last_time)}前)" %></td>
      <td><%= client.online_days %>天</td>
      <td><%= (client.distance_today / 1000).round(2) %></td>
      <td><%= (client.duration_today / 60).round(2) %></td>
      <td><%= (client.distance_all / 1000).round(2) %></td>
      <td><%= (client.duration_all / 60).round(2) %></td>
    </tr>
    <% end %>
  </tbody>
</table> 
</div>
