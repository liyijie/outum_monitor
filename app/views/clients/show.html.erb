<%- model_class = Client -%>

<ul class="breadcrumb">
  <li><a href="/"><span class="label label-success">主页</span></a> <span class="divider">/</span></li>
  <li><a href="/clients/"><span class="label label-info">客户端统计</span></a> <span class="divider">/</span></li>
  <li class="active"><span class="label label-default"><%= @client.label %></span></li>
</ul>

<dl class="dl-horizontal">
  <dt><strong>序列号</strong></dt>
  <dd><%= @client.label %></dd>
  <dt><strong>在线天数</strong></dt>
  <dd><%= @client.online_days %></dd>
  <dt><strong>最后上线时间</strong></dt>
  <dd><%= @client.last_time %></dd>
  <dt><strong>所在城市</strong></dt>
  <dd><%= @client.recent_city.to_s %></dd>
  <dt><strong>今日里程（km）</strong></dt>
  <dd><%= (@client.distance_today / 1000).round(2) %></dd>
  <dt><strong>今日在线时长（分）</strong></dt>
  <dd><%= (@client.duration_today / 60).round(2) %></dd>
  <dt><strong>总里程（km）</strong></dt>
  <dd><%= (@client.distance_all / 1000).round(2) %></dd>
  <dt><strong>总在线时长（分）</strong></dt>
  <dd><%= (@client.duration_all / 60).round(2) %></dd>
</dl>

<% if @client.records.length > 0 %>
  <table id="records" class="table table-striped table-bordered table-hover datatable">
    <thead>
      <tr>
        <th>所在城市</th>
        <th>日期</th>
        <th>终端类型</th>
        <th>终端IMEI</th>
        <th>当日里程（km）</th>
        <th>当日在线时长（分）</th>
        <th>最后在线时间</th>
      </tr>
    </thead>
    <tbody>

      <% @client.records.each do |record| %>
        <tr>
          <td><%= record.city %></td>
          <td><%= record.date %></td>
          <td><%= record.ue %></td>
          <td><%= record.imei %></td>
          <td><%= (record.distance / 1000).round(2) %></td>
          <td><%= (record.duration / 60).round(2) %></td>
          <td><%= record.last_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>



